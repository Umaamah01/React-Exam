{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],        // âœ… Add this
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Module Behavior */
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
